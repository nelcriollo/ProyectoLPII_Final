	public Menu findById(int codmen) {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public List<Menu> listAll() {
		// TODO Auto-generated method stub
		return null;
	}

	@Override
	public List<Menu> ListarMenusPorUsuario(int codUsu) {
		// TODO Auto-generated method stub
		return null;
	}

}
